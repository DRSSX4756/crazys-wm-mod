<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="MkPt">
    <Description>
        She will make various potions.
    </Description>

    <Performance Modifier="work.makepotions">
        <Primary Skill="Brewing"/>
        <Primary Skill="Herbalism"/>
        <Secondary Skill="Service" />
        <Secondary Skill="Magic" />
        <Secondary Skill="Cooking" />
    </Performance>

    <Gains XP="5" Skill="3" />

    <Messages>
        <Entry Name="work">
            <Text>${name} worked as a potions maker on the farm.</Text>
        </Entry>
        <Entry Name="repair">
            <Text>She spent some of her time repairing the Farm's equipment instead of making new stuff.</Text>
        </Entry>
        <Entry Name="produce">
            <Text>${name} made:</Text>
        </Entry>
    </Messages>
</Job>
