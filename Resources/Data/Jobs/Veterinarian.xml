<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="Vet">
    <Description>
        She will tend to sick animals.
    </Description>

    <Performance Modifier="work.veterinarian">
        <Primary Skill="Medicine"/>
        <Primary Skill="AnimalHandling"/>
        <Secondary Stat="Intelligence" />
        <Secondary Stat="Charisma" />
        <Secondary Skill="Beastiality" />
    </Performance>

    <Gains XP="10" Skill="3" />

    <Messages>
        <Entry Name="work">
            <Text>${name} worked as a Veterinarian on the farm.</Text>
        </Entry>
        <Entry Name="refuse">
            <Text>${name} refused to work during the</Text>
        </Entry>
    </Messages>
</Job>
