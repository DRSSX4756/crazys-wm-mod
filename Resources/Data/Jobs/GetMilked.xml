<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="Mlkd">
    <Description>
        She will have her breasts milked
    </Description>
    <!-- GetMilked has a non-trivial performance calculation
    Service skill is only mentioned here so it will be updated
    -->
    <Performance Modifier="work.getmilked">
        <Primary Skill="Service"/>
    </Performance>

    <Gains XP="5" Skill="3" />

    <Messages>
        <Entry Name="work">
            <Text>${name}'s breasts were milked.</Text>
        </Entry>
        <Entry Name="refuse">
            <Text>${name} refused to let her breasts be milked</Text>
        </Entry>
    </Messages>
</Job>
