<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="Mech">
    <Description>
        Will help the doctor and repair Constructs.
    </Description>

    <Performance>
        <Factor Stat="Intelligence" Weight="2"/>
        <Factor Skill="Medicine" Weight="1"/>
        <Factor Skill="Service" Weight="1"/>

        <!-- good traits -->
        <Trait Name="Charismatic" Value="5"/>
        <Trait Name="Sexy Air" Value="5"/>
        <Trait Name="Cool Person" Value="10"/>
        <Trait Name="Charming" Value="5"/>
        <Trait Name="Nerd" Value="15"/>
        <Trait Name="Strong" Value="10"/>
        <Trait Name="Tough" Value="5"/>
        <Trait Name="Construct" Value="10"/>
        <Trait Name="Half-Construct" Value="5"/>
        <Trait Name="Psychic" Value="10"/>
        <Trait Name="Goddess" Value="10"/> <!-- might be able to heal people easier.. they are a goddess after all -->
        <Trait Name="Optimist" Value="10"/>

        <!-- bad traits -->
        <Trait Name="Dependant" Value="-40"/>
        <Trait Name="Clumsy" Value="-20"/>
        <Trait Name="Aggressive" Value="-10"/>
        <Trait Name="Nervous" Value="-20"/>
        <Trait Name="Meek" Value="-20"/>
        <Trait Name="Elegant" Value="-5"/> <!-- Don't break a nail -->
        <Trait Name="Queen" Value="-20"/>  <!-- Manual labor is beneth her -->
        <Trait Name="Princess" Value="-10"/>   <!-- Manual labor is beneth her -->
        <Trait Name="Mind Fucked" Value="-50"/>
        <Trait Name="Pessimist" Value="-10"/>
        <Trait Name="Sadistic" Value="-20"/>

        <Trait Name="One Arm" Value="-40"/>
        <Trait Name="One Foot" Value="-40"/>
        <Trait Name="One Hand" Value="-30"/>
        <Trait Name="One Leg" Value="-60"/>
        <Trait Name="No Arms" Value="-150"/>
        <Trait Name="No Feet" Value="-60"/>
        <Trait Name="No Hands" Value="-90"/>
        <Trait Name="No Legs" Value="-150"/>
        <Trait Name="Blind" Value="-75"/>
        <Trait Name="Deaf" Value="-15"/>
        <Trait Name="Retarded" Value="-60"/>
        <Trait Name="Smoker" Value="-10"/> <!-- would need smoke breaks -->

        <Trait Name="Alcoholic" Value="-25"/>
        <Trait Name="Fairy Dust Addict" Value="-25"/>
        <Trait Name="Shroud Addict" Value="-25"/>
        <Trait Name="Viras Blood Addict" Value="-25"/>
    </Performance>

    <Gains XP="10" Skill="2">
        <Stat Name="Intelligence" Weight="2" />
        <Skill Name="Medicine" Weight="1" />
        <Skill Name="Service" Weight="1" />
        <GainTrait Trait="Charismatic" Threshold="60" Action="WORKMECHANIC">
            Dealing with patients and talking with them about their problems has made ${name} more Charismatic.
        </GainTrait>
        <GainTrait Trait="Strong" Threshold="60" Action="WORKMECHANIC">
            Handling heavy parts and working with heavy tools has made ${name} much Stronger.
        </GainTrait>
        <LoseTrait Trait="Nervous" Threshold="20" Action="WORKMECHANIC">
            ${name} seems to finally be getting over her shyness. She's not always so Nervous anymore.
        </LoseTrait>
        <LoseTrait Trait="Nervous" Threshold="40" Action="WORKMECHANIC">
            Working with dirty, greasy equipment has damaged ${name}'s hair, skin and nails making her less Elegant.
        </LoseTrait>
    </Gains>

    <Messages>
        <Message Name="work">
            <Text>${name} worked as a mechanic.</Text>
        </Message>
    </Messages>
</Job>
