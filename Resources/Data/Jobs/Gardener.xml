<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="Grdn">
    <Description>
        She will produce herbs.
    </Description>

    <Performance Modifier="work.gardener">
        <Primary Skill="Herbalism"/>
        <Secondary Skill="Farming" />
        <Secondary Stat="Constitution" />
        <Secondary Stat="Intelligence" />
    </Performance>

    <Gains XP="5" Skill="3" />

    <Messages>
        <Entry Name="work">
            <Text>${name} worked as a gardener on the farm.</Text>
        </Entry>
        <Entry Name="repair">
            <Text>She spent some of her time repairing the Farm's equipment instead of gardening.</Text>
        </Entry>
        <Entry Name="produce">
            <Text>${name} was able to harvest:</Text>
        </Entry>
    </Messages>
</Job>
